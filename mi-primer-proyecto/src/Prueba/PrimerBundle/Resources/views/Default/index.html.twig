{% block contenido%}
    <div class="row">
        <h2>Bienvenido </h2>
        <button class="btn waves-effect waves-light right" type="" name="action">Historial
            <i class="fa-regular fa-rectangle-list" style="color: #ffffff;"></i>
        </button>
    </div>


    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Depositos <i class="fa-regular fa-credit-card" style="color: #ffffff;"></i></span>
                    <form>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="number" class="validate">
                                <label for="password">Numero de cuenta <i class="fa-solid fa-address-card" style="color: #ffffff;"></i></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="number" class="validate">
                                <label for="email">Cantidad</label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Aceptar
                            <i class="fa-solid fa-check" style="color: #ffffff;"></i>
                        </button>
                        <button class="btn waves-effect waves-light" type="" name="action">Limpiar
                            <i class="fa-regular fa-trash-can" style="color: #ffffff;"></i>
                        </button>

                    </form>
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Retiros <i class="fa-solid fa-money-bill-transfer" style="color: #ffffff;"></i></span>
                    <form>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="password" type="number" class="validate">
                                <label for="password">Numero de cuenta <i class="fa-solid fa-address-card" style="color: #ffffff;"></i></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="number" class="validate">
                                <label for="email">Cantidad</label>
                            </div>
                        </div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Aceptar
                            <i class="fa-solid fa-check" style="color: #ffffff;"></i>
                        </button>
                        <button class="btn waves-effect waves-light" type="" name="action">Limpiar
                            <i class="fa-regular fa-trash-can" style="color: #ffffff;"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="card col s12">
                <table id="tb_historial" >
                    <thead>
                    <h3>Historial de movimientos</h3>
                    <tr>
                        <th>Numero de cuenta</th>
                        <th>Cliente</th>
                        <th>Movimiento</th>
                        <th>Cantidad</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for movimiento in data['data'] %}
                    <tr>
                        <td>{{ movimiento.NoCuenta }}</td>
                        <td>{{ movimiento.Cliente }}</td>
                        <td>{{ movimiento.Movimientos }}</td>
                        <td>{{ movimiento.Cantidad }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
